BoxLayout:
    width: 500
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Control"
            size_hint_y: None
            height: 50
        ScrollView:
            BoxLayout:
                padding: 5, 0
                size_hint_y: None
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                Button:
                    id: start
                    text: "Start"
                    size_hint_y: None
                    height: 70
                    padding: 10 , 10
                Label:
                    text: "Save config"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: config_save_name
                    text: ""
                    size_hint_y: None
                    height: 40
                Button:
                    id: save
                    text: "Save Config"
                    size_hint_y: None
                    height: 70
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Properties"
            size_hint_y: None
            height: 50
        ScrollView:
            BoxLayout:
                padding: 5, 0
                size_hint_y: None
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: "Axiom"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: axiom
                    text: "FF+F-FF-F+FF"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Rule"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: rule
                    text: "[3F]-2F++2F-[3F]"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Start Angle"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: start_angle
                    text: "90"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Angle"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: angle
                    text: "25"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Nesting"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: nesting
                    text: "4"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Length"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: length
                    text: "5"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Start x"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: start_x
                    text: "100"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Start y"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: start_y
                    text: "100"
                    size_hint_y: None
                    height: 40
                Label:
                    text: "Line width"
                    size_hint_y: None
                    height: 50
                TextInput:
                    id: width
                    text: "1"
                    size_hint_y: None
                    height: 40
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Configs"
            size_hint_y: None
            height: 50
        ScrollView:
            BoxLayout:
                padding: 5, 0
                size_hint_y: None
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                id: configs
